<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:id="@+id/ProcessesLayout"
    android:minWidth="25px"
    android:minHeight="25px"
    android:background="#4B597C"
    android:alpha=".75">
    <ScrollView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView1">
        <TableLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ProcessListLayout">
            <TableRow
                android:id="@+id/HeaderRow"
                android:gravity="center_horizontal">
                <TextView
                    android:text="Name"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/NameHeader"
                    android:layout_column="0"
                    android:layout_marginRight="10dp"
                    android:typeface="sans"
                    android:textSize="14dp"
                    android:textStyle="normal"
                    android:textColor="#ffffffff"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp" />
                <TextView
                    android:text="Status"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/StatusHeader"
                    android:layout_column="1"
                    android:layout_marginRight="5dp"
                    android:typeface="sans"
                    android:textSize="14dp"
                    android:textStyle="normal"
                    android:textColor="#ffffffff"
                    android:layout_marginTop="10dp" />
                <TextView
                    android:text="CPU"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/CpuHeader"
                    android:layout_column="2"
                    android:layout_marginRight="5dp"
                    android:typeface="sans"
                    android:textSize="14dp"
                    android:textStyle="normal"
                    android:textColor="#ffffffff"
                    android:layout_marginTop="10dp"
                    android:gravity="center" />
                <TextView
                    android:text="RAM"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_column="3"
                    android:id="@+id/RamHeader"
                    android:layout_marginRight="5dp"
                    android:typeface="sans"
                    android:textSize="14dp"
                    android:textStyle="normal"
                    android:textColor="#ffffffff"
                    android:layout_marginTop="10dp"
                    android:gravity="center" />
                <TextView
                    android:text="DIsk"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_column="4"
                    android:id="@+id/DiskHeader"
                    android:layout_marginRight="5dp"
                    android:typeface="sans"
                    android:textSize="14dp"
                    android:textStyle="normal"
                    android:textColor="#ffffffff"
                    android:layout_marginTop="10dp"
                    android:gravity="center" />
                <TextView
                    android:text="Network"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_column="5"
                    android:id="@+id/NetworkHeader"
                    android:typeface="sans"
                    android:textSize="14dp"
                    android:textStyle="normal"
                    android:textColor="#ffffffff"
                    android:layout_marginTop="10dp"
                    android:gravity="center" />
            </TableRow>
        </TableLayout>
    </ScrollView>
</LinearLayout>